.content:not(.custom) {
	max-width: 850px;
}

.navbar {
	z-index: 9001;
}

table {
    display: table;
}

td > img {
	outline: solid 1px #555;
	transition: transform .1s, box-shadow .1s .05s, z-index 0.13s;
	height: 50%;
	position: relative;
	z-index: 0;
}

td > img:hover {
	transform: scale(2);
	box-shadow: 5px 5px 2px #00000033
	z-index: 100;
}

tr:nth-child(2n) {
	background-color: #ffffff00;
}

th, td {
	border: 1px solid #00000022;
	padding: 0.5em 0.5em;
}

th {
	background-color: #0071ba;
	color: #fdfdfd;
}

