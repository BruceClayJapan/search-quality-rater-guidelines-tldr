$sidebarWidth = 20rem;

.ceo
	margin: 1rem 0;
	padding: .1rem 1.5rem;
	border-radius: 0.4rem;
	background-color: #ddd;
	.title
		font-size: 1.5rem;
		font-weight: bold;

.content:not(.custom) {
	max-width: 900px;
}

.page {
	padding-left: $sidebarWidth;
}
.sidebar {
	z-index: 9000;
	font-size: 16px;
	background-color: rgb(255, 255, 255);
	width: $sidebarWidth;
	position: fixed;
	top: 3.6rem;
	left: 0px;
	bottom: 0px;
	box-sizing: border-box;
	overflow-y: auto;
	margin: 0px;
	border-right: 1px solid rgb(202, 204, 207);
}
.navbar {
	z-index: 9001;
}

table {
	display: table;
}

td > img {
	outline: solid 1px #555;
	transition: transform .1s, box-shadow .1s .05s, z-index 0.13s;
	height: auto;
	min-width: 50%;
	position: relative;
	z-index: 0;
}

td > img:hover {
	transform: scale(2);
	box-shadow: 5px 5px 2px #00000033
	z-index: 100;
}

tr:nth-child(2n) {
	background-color: #ffffff00;
}

th, td {
	border: 1px solid #00000022;
	padding: 0.5em 0.5em;
}

th {
	background-color: #0071ba;
	color: #fdfdfd;
}

