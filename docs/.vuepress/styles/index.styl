.page 
    padding-bottom 2rem
    padding-top 3.5rem

td > img
  outline solid 1px #555
  height auto
  min-width 50%
  position relative
  z-index 0
//  transition transform .1s, box-shadow .1s .05s, z-index 0.13s

tr:nth-child(2n)
  background-color #ffffff00

th, td
  border 1px solid #00000022
  padding 0.5em 0.5em

th
  background-color #0071ba
  color #fdfdfd

a.header-anchor
  font-size .625em
  float left
  margin-top 0.25em
  margin-left -1.4em
  padding-right 0em
  padding-bottom 0.25em
  opacity 0

.theme-default-content:not(.custom) a:hover
    text-decoration none
    border-bottom #0071ba solid 0.0625em

.line-number, code, kbd
    font-family "source-code-pro", "Menlo", "Monaco", "Consolas", "Courier New", "" monospace
